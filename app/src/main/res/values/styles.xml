<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MiddleTextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LargeTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DarkGreenButton" parent="MiddleTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_button_selector_dark_green</item>
        <item name="android:background">@drawable/solid_round_trans_gray</item>
    </style>

    <style name="DarkBlueButton" parent="MiddleTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_button_selector_dark_blue</item>
        <item name="android:background">@drawable/solid_round_trans_gray</item>
    </style>

    <style name="GrayBorderRoundFixedInput" parent="MiddleTextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border_round_gray</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_margin">3dp</item>
    </style>


</resources>
