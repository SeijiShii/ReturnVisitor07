<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MiddleTextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LargeTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DarkGreenButton" parent="MiddleTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/trans_gray_solid_round</item>
    </style>

    <style name="DarkBlueButton" parent="MiddleTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:background">@drawable/trans_gray_solid_round</item>
    </style>

</resources>
