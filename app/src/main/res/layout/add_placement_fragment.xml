<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/category"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:id="@+id/placementCategorySpinner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/magazineTypeSpinnerRow"
            android:layout_margin="5dp">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:id="@+id/magazineTypeSpinner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/yearNumberRow"
            android:layout_margin="5dp">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/placementYearSpinner"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/placementNumberSpinner"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gray_border_round"
            android:id="@+id/placementNameText"
            android:lines="1"
            android:hint="@string/name"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:minHeight="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_round"
            android:id="@+id/placementDescText"
            android:hint="@string/description"
            android:layout_margin="5dp"/>

    </LinearLayout>
</ScrollView>

