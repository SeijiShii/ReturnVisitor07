<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/gray_bottom_border">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/roomMark"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/roomText"
        android:textColor="@color/darkGray"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:paddingStart="10dp"/>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/roomMenuButton"
            android:background="@drawable/ic_more_horiz_black_24dp"
            android:contentDescription="@string/menu_button_description"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>