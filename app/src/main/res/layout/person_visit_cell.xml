<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border_round"
    android:layout_margin="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/personCellForShow">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/personText"
                android:gravity="center"
                style="@style/MiddleTextView"/>

            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:id="@+id/editPersonButton"
                android:background="@drawable/blue_edit_button_selector"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:id="@+id/personCellForEdit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="@string/name"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical|start"
                    android:id="@+id/personNameText"
                    android:background="@drawable/gray_border_round"
                    android:layout_margin="2dp"/>

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:id="@+id/fixPersonButton"
                    android:background="@drawable/blue_arrow_up_button_selector"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/sexRadioGroup"
                    android:layout_gravity="center">

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="@string/male"
                        android:textSize="12sp"
                        android:textColor="@color/darkGray"
                        android:id="@+id/maleRadioButton"/>

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="@string/female"
                        android:textSize="12sp"
                        android:textColor="@color/darkGray"
                        android:id="@+id/femaleRadioButton"/>

                </RadioGroup>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/ageSpinner"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/personDescriptionText"
                android:background="@drawable/gray_border_round"
                android:inputType="textMultiLine"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:gravity="start|top"
                style="@style/MiddleTextView"
                android:hint="@string/note"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Switch
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:id="@+id/seenSwitch"
            android:gravity="center"
            android:text="@string/seen"/>

        <Switch
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:id="@+id/rvSwitch"
            android:gravity="center"
            android:text="@string/is_rv"/>

        <Switch
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:id="@+id/studySwitch"
            android:gravity="center"
            android:text="@string/is_study"/>

        <View
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/dark_gray_horiz_dots_solid"
            android:id="@+id/personVisitMenuButton"/>

    </LinearLayout>

</LinearLayout>