<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="2">

    <View android:layout_row="0"
        android:layout_column="0"
        android:background="@color/videoBlue"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"/>

    <TextView android:layout_row="0"
        android:layout_column="1"
        android:text="@string/show_video"
        android:layout_margin="10dp"
        android:textColor="@color/darkGray"/>

    <View android:layout_row="1"
        android:layout_column="0"
        android:background="@color/plcViolet"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"/>

    <TextView android:layout_row="1"
        android:layout_column="1"
        android:text="@string/placement"
        android:layout_margin="10dp"
        android:textColor="@color/darkGray"/>

    <View android:layout_row="2"
        android:layout_column="0"
        android:background="@color/studyOrange"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"/>

    <TextView android:layout_row="2"
        android:layout_column="1"
        android:text="@string/study"
        android:layout_margin="10dp"
        android:textColor="@color/darkGray"/>

    <View android:layout_row="3"
        android:layout_column="0"
        android:background="@color/rvGold"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"/>

    <TextView android:layout_row="3"
        android:layout_column="1"
        android:text="@string/return_visit"
        android:layout_margin="10dp"
        android:textColor="@color/darkGray"/>

    <View android:layout_row="4"
        android:layout_column="0"
        android:background="@color/visitGreen"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"/>

    <TextView android:layout_row="4"
        android:layout_column="1"
        android:text="@string/visit"
        android:layout_margin="10dp"
        android:textColor="@color/darkGray"/>

    <View android:layout_row="5"
        android:layout_column="0"
        android:background="@color/workGreen"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"/>

    <TextView android:layout_row="5"
        android:layout_column="1"
        android:text="@string/work"
        android:layout_margin="10dp"
        android:textColor="@color/darkGray"/>

</GridLayout>