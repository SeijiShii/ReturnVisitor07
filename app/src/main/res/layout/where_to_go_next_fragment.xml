<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmokeTrans">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/backToMapButton"
            android:background="@drawable/chevron_left_selector_dark_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/where_to_go_next"
            android:textColor="@color/darkGray"
            android:gravity="start|center_vertical"
            android:textSize="20sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/visitListView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/panelExtractBar"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/arrowImageView"
            android:background="@drawable/ic_keyboard_arrow_up_white_24dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <work.ckogyo.returnvisitor.views.HeightAnimationFrame
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/filterPanelFrame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/lightGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_whitesmoke"
                    android:layout_margin="5dp"
                    android:id="@+id/periodStartSpinner"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="~"
                    android:gravity="center"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_whitesmoke"
                    android:layout_margin="5dp"
                    android:id="@+id/periodEndSpinner"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_button_solid_red"
                        android:id="@+id/redFilterButton"/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_button_solid_purple"
                        android:id="@+id/purpleFilterButton"/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_button_solid_blue"
                        android:id="@+id/blueFilterButton"/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_button_solid_green"
                        android:id="@+id/greenFilterButton"/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_button_solid_gold"
                        android:id="@+id/goldFilterButton"/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_button_solid_orange"
                        android:id="@+id/orangeFilterButton"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </work.ckogyo.returnvisitor.views.HeightAnimationFrame>

</LinearLayout>