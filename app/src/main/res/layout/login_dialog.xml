<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/rv_logo"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/drawerLogoButton"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <com.google.android.gms.common.SignInButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:id="@+id/googleSignInButton"/>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/gray_help_solid"
            android:id="@+id/googleSignInHelpButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:id="@+id/anonymousLoginButton"
            android:drawableStart="@drawable/ic_person_outline_gray_24dp"
            android:paddingStart="10dp"
            android:background="@color/whiteSmoke"
            android:text="@string/try_without_login"/>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/gray_help_solid"
            android:id="@+id/anonymousLoginHelpButton"/>

    </LinearLayout>

</LinearLayout>