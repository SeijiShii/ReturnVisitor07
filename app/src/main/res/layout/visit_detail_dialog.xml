<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/visit"
                android:textSize="20sp"
                android:textColor="@color/darkGray"
                android:gravity="bottom"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"/>

            <View
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/dark_gray_horiz_dots_solid"
                android:id="@+id/visitDetailMenuButton"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@drawable/gray_bottom_border">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:gravity="center_horizontal|bottom"
                android:text="@string/place"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:id="@+id/placeText"
                android:gravity="start|bottom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@drawable/gray_bottom_border">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:gravity="center_horizontal|bottom"
                android:text="@string/address"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:id="@+id/addressText"
                android:gravity="start|bottom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@drawable/gray_bottom_border">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:gravity="center_horizontal|bottom"
                android:text="@string/persons"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:id="@+id/personsText"
                android:gravity="start|bottom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@drawable/gray_bottom_border">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:gravity="center_horizontal|bottom"
                android:text="@string/priority"/>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/priorityMark"/>

            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:id="@+id/priorityText"
                android:gravity="start|bottom"/>

        </LinearLayout>

        <work.ckogyo.returnvisitor.views.TagViewContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGray"
            android:id="@+id/placementTagContainer"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <work.ckogyo.returnvisitor.views.TagViewContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGray"
            android:id="@+id/tagContainer"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@drawable/gray_bottom_border">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:gravity="center_horizontal|bottom"
                android:text="@string/note"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/darkGray"
                android:id="@+id/noteText"
                android:gravity="start|bottom"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>